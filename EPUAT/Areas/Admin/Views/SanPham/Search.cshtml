
@model List<EPUAT.Models.SanPham>

@{
    Layout = null;
    Layout = "~/Areas/Admin/Views/Shared/ViewPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
</head>
<body>
    <div>
        <div style="position: absolute; width: 1200px; right: 10px">
            <h2>Danh sách sản phẩm</h2>
            <div>
                @Html.ActionLink("Thêm Mới", "Add")
                @using (Html.BeginForm("Search", "SanPham", FormMethod.Get))
                {
                    @*<label>Lọc theo danh mục: </label>
                <div>
                    @Html.DropDownList("category", "-- Tất cả --")
                </div>*@
                    <label>Lọc theo tên: </label>
                    <div>@Html.TextBox("Search")</div>
                    <input type="submit" value="Lọc" />
                }
            </div>

            <table class="table">
                <thead class="thead-dark" style="background-color: #000000d9;color: aliceblue;">
                <th>#</th>
                <th>Tên Sản Phẩm</th>
                <th>Danh mục hình ảnh</th>
                <th>Giá</th>
                <th>Sửa</th>
                <th style="text-align:center">Xem sản phẩm </th>
                <th>Xóa </th>

                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td> <img alt="@item.images" src="@item.images" width="100" height="100" /></td>
                        <td>@item.Gia</td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { ID = item.Id })
                        </td>
                        <td style="text-align:center">
                            @Html.ActionLink("Xem", "show", new { ID = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Xóa", "Delete", new { ID = item.Id })
                        </td>

                    </tr>
                }
            </table>
        </div>
        </div>
</body>
</html>
